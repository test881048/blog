<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <script src="https://kit.fontawesome.com/309cb5bc87.js" crossorigin="anonymous"></script>

  <!--we've to use the prefix already setted in app.js file before path name like (public)-->
  <style>
    body {
      background-color: aliceblue;
      padding: 50px;
      font: 20px "Lucida Grande", Helvetica, Arial, sans-serif;
    }

    #thead {
      background-color: grey;
    }
  </style>


  <script src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

</head>

<body>

  <h1 align="center">
    DOCS_4_U Users List
  </h1>

  <a href="/ahomepage" class="btn btn-success"><i class="fa-solid fa-house"></i>&emsp;<span>Back to Home Page</span></a>

  <br><br>

  <table class="table">

    <tr id="thead" align="center">
      <th scope="col">Name</th>
      <th scope="col">Email ID</th>
      <th scope="col">User Type</th>
      <th scope="col">Actions</th>
    </tr>

    <tbody id="tablebody" align="center">
      <% for(var i=0; i < user.length; i++) { %>
        <tr>
          <th>
            <%= user[i].name %>
          </th>
          <th>
            <%= user[i].email %>
          </th>
          <th>
            <%= user[i].user %>
          </th>
          <th>
            <a href="updateuser/<%= user[i].id %>" class="btn btn-warning">
              <i class="fa-solid fa-pen-to-square"></i>
            </a>
            &emsp;
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
              <i class="fas fa-user-times"></i>
            </button>

            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
              aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete User</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    The User will be deleted permanently, Are you sure?
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <a href="/deleteuser/<%= user[i].id %>" type="submit" class="btn btn-danger" id="deletepostbtn">Delete
                      User</a>
                  </div>
                </div>
              </div>
            </div>

          </th>
        </tr>
        <% } %>
    </tbody>
  </table>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
</body>

</html>